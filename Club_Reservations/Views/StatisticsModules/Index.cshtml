@model IEnumerable<Club_Reservations.Models.StatisticsModule>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfTables)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfCustomers)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfPastReservations)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfUpcomingReservations)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfTables)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfCustomers)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfPastReservations)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfUpcomingReservations)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
